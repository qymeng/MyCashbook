/* pages/homepage/homepage.wxss */

page {
  height: 100%;
  border-top: 2px #007196 dashed;
}

.histogram {
  width: 100%;
  background-color: rgba(190, 238, 240, 0.8);
  display: flex;
  flex-flow: row nowrap;
  align-items: flex-end;
  justify-content: space-around;
}

.itemContainer {
  width: 34%;
  height: 100%;
  border: 1rpx solid #009688;
  display: flex;
  flex-direction: column-reverse;
  align-items: center;
}

.item {
  width: 100%;
  border: 1rpx solid #009688;
  display: flex;
  flex-direction: column-reverse;
  align-items: center;
}

.day {
  background-color: rgba(55, 198, 192, 0.71);
}

.week {
  background-color: rgba(29, 176, 184, 0.79);
}

.month {
  background-color: rgba(5, 81, 106, 0.68);
}

.content {
  color: #fff;
  font-size: 32px;
  margin-bottom: 100rpx;
}

.buttonList {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}

.button {
  color: rgba(0, 113, 150, 0.73);
}
