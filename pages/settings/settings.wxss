/* pages/settings/settings.wxss */

page {
  height: 100%;
  background-color: rgba(190, 238, 240, 0.33);
}

.titleContainer {
  height: 20%;
  width: 100%;
  border-bottom-style: dashed;
  border-bottom-color: rgba(5, 81, 106, 0.68);
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.title {
  font-size: 36px;
  color: rgba(5, 81, 106, 0.68);
  font-family: "PingFangSC-Medium";
  letter-spacing: 10px;
}

.settingContainer {
  height: 20%;
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.settingTitle {
  width: 30%;
  font-size: 130%;
  color: rgba(5, 81, 106, 0.68);
  text-align: center;
}

.settingInput {
  margin-left: 15%;
  width: 60%;
  border: solid 2px #666;
  border-radius: 10px;
  padding: 8px;
  text-align: right;
}

.buttonContainer {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}

.icon {
  color: rgba(5, 81, 106, 0.68);
}
